<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="loginPage" prefHeight="474.0" prefWidth="470.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TextField fx:id="loginUsername" layoutX="161.0" layoutY="280.0" promptText="Username" />
      <PasswordField fx:id="loginPassword" layoutX="162.0" layoutY="313.0" promptText="Password" />
      <Button fx:id="loginBTN" layoutX="197.0" layoutY="355.0" mnemonicParsing="false" onAction="#loginAuthenticator" prefHeight="25.0" prefWidth="80.0" text="Login" />
      <Hyperlink fx:id="signUpLink" alignment="CENTER" layoutX="203.0" layoutY="388.0" onAction="#displayCreateAccountPage" prefHeight="25.0" prefWidth="69.0" text="Sign Up!" />
      <Label fx:id="loginUsernameError" alignment="CENTER" layoutX="310.0" layoutY="280.0" prefHeight="25.0" prefWidth="131.0" textFill="RED" />
      <Label fx:id="loginPasswordError" alignment="CENTER" layoutX="310.0" layoutY="313.0" prefHeight="25.0" prefWidth="131.0" textFill="RED" />
      <ImageView fx:id="loginPic" fitHeight="223.0" fitWidth="230.0" layoutX="122.0" layoutY="34.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
